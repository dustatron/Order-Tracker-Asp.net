<form action="/venders/@Model.Id" method="post">
  <div class="form-group">
    <label for="venderName">Vender Name</label>
    <input type="text" name="venderName" class="form-control" value="@Model.VenderName">
  </div>
  
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" name="address" class="form-control" value="@Model.Address">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" name="description" class="form-control" value="@Model.Description">
  </div>
  <input type="hidden" name="id" value="@Model.Id">
  <button type="submit" class="btn btn-primary btn-block">Update</button>
</form>
<form action="/venders/@Model.Id/Delete" method="post">
  <input type="hidden" name ="id" value="@Model.Id">
  <button class="btn btn-danger btn-block">Delete</button>
</form>