@{
  Layout = "_layout";
}
<h2 class="text-center pad-top">Venders Home</h2>
<div class="text-center">
  <a href="/venders/new" class="text-center"><button class="btn btn-lg btn-info">Add Vender</button></a>
</div>

@if (Model.Count > 0)
{
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="card-columns pad-top">

      @foreach (var vender in Model)
      {
        <div class="card" style="width: 20rem;">
          <img class="card-img-top" src="http://source.unsplash.com/200x100/?@vender.VenderName." alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">@vender.VenderName</h5>
            <p class="card-text">@vender.Description</p>
            <p>Address : @vender.Address</p>
            <p>Number of Orders : @vender.OrdersList.Count</p>
            <a href="/vender/@vender.Id" class="btn btn-primary">Details</a>
            <a href="/vender/@vender.Id/orders/new" class="btn btn-info">Add Order</a>
            <a href="/vender/@vender.Id/orders/show" class="btn btn-info">All Orders</a>
          </div>
        </div>

      }
      </div>
    </div>
  </div>
}
else 
{
  <div class="jumbotron bg-dark text-white">
    <h3 class="text-center">Add a vender</h3>
  </div>
}
